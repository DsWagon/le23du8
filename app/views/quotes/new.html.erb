<div class="container form-container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10">
      <h2 style="text-align:center;" class="highlight">Création de devis</h2>
      <%= simple_form_for @quote do |f| %>
        <div class="form-group mt-3">
          <%= f.text_field :company_name, class: "form-control", label: "Entreprise", placeholder: "Nom de l'entreprise", required: true %>
        </div>
        <div class="form-group mt-3">
          <%= f.input :description, as: :rich_text_area, class: "form-control", required: true %>
        </div>
        <div class="form-group mt-3">
          <%= f.label :Prix %>
          <%= f.input :price, as: :integer, class: "form-control", required: true, label: false %>
        </div>
        <div class="row">
          <div class="col-lg-6 col-sm-6 col-6 column">
            <div class="form-group mt-3">
              <%= f.label :Date_de_début %>
              <%= f.date_field :date_start, class: "form-control" %>
            </div>
          </div>
          <div class="col-lg-6 col-sm-6 col-6 column">
            <div class="form-group mt-3">
              <%= f.label :Date_de_fin %>
              <%= f.date_field :date_end, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="form-group mt-3">
          <%= f.label :Réunion %>
          <%= f.collection_select :meeting_id, Meeting.all, :id, :title, prompt: "Sélectionnez une réunion", class: "form-control" %>
        </div>
        <div class="form-margin">
          <div class="form-actions">
            <%= f.submit "Créer le devis", class: "btn btn-flat" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
