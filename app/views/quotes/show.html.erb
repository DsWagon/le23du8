              <i class="fa-solid fa-edit fa-lg circle-icon-edit mx-3" style="color: #fd7e14;"></i>
            <% end %>
          <%= link_to quote_path(@quote), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
              <i class="fa-solid fa-trash fa-lg circle-icon-delete mx-3" style="color: #e7081f;"></i>
            <% end %>
        </div>
      </div>
    </div>
  </div>
