<div class="container form-container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <h2 style="text-align:center;">Éditer la réunion</h2>
      <%= simple_form_for(@meeting) do |f|  %>
        <div class="form-group mt-3">
          <%= f.label :Titre %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group mt-3">
          <%= f.label :Description %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group mt-3">
          <%= f.label :Date %>
          <%= f.date_field :date, class: "form-control" %>
        </div>
        <div class="form-group mt-3">
          <%= f.label :Syndic %>
          <%= f.collection_select :syndic_id, Syndic.all, :id, :name, prompt: "Sélectionnez un syndic", class: "form-control" %>
        </div>
        <div class="form-margin">
          <div class="form-actions">
            <%= f.submit "Modifier la réunion", class: "btn btn-flat" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
