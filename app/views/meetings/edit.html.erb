<div class="container devise-container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <h2 style="text-align:center;">Editer la réunion</h2>
      <%= simple_form_for(@meeting) do |f|  %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :date %>
          <%= f.date_field :date, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :syndic_id %>
          <%= f.collection_select :syndic_id, Syndic.all, :id, :name, prompt: "Sélectionnez un syndic", class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit "Créer la réunion", class: "btn btn-flat" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
