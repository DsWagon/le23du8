<div class="container form-container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <h2 style="text-align:center;">Se connecter</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs mt-5">
          <%= f.input :email,
                      label: false,
                      required: false,
                      autofocus: true,
                      input_html: { placeholder: "Email", autocomplete: "email" } %>
          <%= f.input :password,
                      label: false,
                      required: false,
                      input_html: { placeholder: "Mot de passe", autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi" if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= button_tag type: 'submit', class: "btn btn-flat" do %>Se connecter<% end %>
        </div>
      <% end %>
      <div class="form-margin">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
