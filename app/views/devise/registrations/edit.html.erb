<div class="container form-container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <h2 style="text-align:center;">Modifier votre profil</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          <div class="row">
            <div class="col-lg-6 col-sm-6 col-6 column">
              <%= f.input :first_name, label: "Prénom",
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "first-name" }%>
            </div>
            <div class="col-lg-6 col-sm-6 col-6 column">
              <%= f.input :last_name, label: "Nom",
                        required: true,
                        autofocus: true,input_html: { autocomplete: "last-name" }%>
            </div>
          </div>
          <%= f.input :password, label: "Nouveau mot de passe (facultatif)",
                hint: "Laissez-le vide si vous ne voulez pas le changer",
                required: false,
                input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation, label: "Confirmation du nouveau mot de passe (facultatif)",
                required: false,
                input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password, label: "Mot de passe actuel (obligatoire)",
                hint: "Nous avons besoin de votre mot de passe actuel pour confirmer vos modifications",
                required: true,
                input_html: { autocomplete: "current-password" } %>
        </div>
        <div class="form-actions">
          <%= button_tag type: 'submit', class: "btn btn-rounded" do %>Valider mes modifications<% end %>
        </div>
      <% end %>
      <hr>
      <%= link_to 'Retour à votre profil', "/profile", class: 'btn btn-flat' %>
      <div class="mt-3">
      <%= button_to "Supprimer mon compte", registration_path(resource_name),
                          data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
                          method: :delete,
                          class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
