<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <div class="d-flex align-items-end">
      <%= link_to "/", class: "navbar-brand" do %>
        <%= image_tag "content.png" %>
      <% end %>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% unless request.fullpath == "/admin" || request.fullpath == "/admins/sign_in" %>
          <% if user_signed_in? || admin_signed_in? %>
            <li class="nav-item">
              <%= link_to "Page d'accueil", "/", class: "btn btn-flat btn-login" %>
            </li>
            <li class="nav-item">
              <%= link_to "Réunion", "/meetings", class: "btn btn-flat btn-login" %>
            </li>
            <li class="nav-item">
              <%= link_to "Devis", "/quotes", class: "btn btn-flat btn-login" %>
            </li>
            <li class="nav-item">
              <%= link_to "Profil", "/profile", class: "btn btn-flat btn-login" %>
            </li>
            <% if admin_signed_in? %>
              <li class="nav-item">
                <%= link_to "Se déconnecter", destroy_admin_session_path, data: {turbo_method: :delete}, class: "btn btn-flat btn-login" %>
              </li>
            <% else user_signed_in?%>
              <li class="nav-item">
                <%= link_to "Se déconnecter", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-flat btn-login" %>
              </li>
            <% end %>
          <% else %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
