<div class="container form-container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10">
      <h2 style="text-align:center;" class="highlight">Nouvel article</h2>
      <%= simple_form_for @post do |f| %>
        <div class="field">
          <%= f.input :title, label: false, placeholder: 'Titre', required: true %>
        </div>
        <div class="field">
          <%= f.input :content, as: :rich_text_area, label: false, placeholder: 'Écrivez votre texte ici' %>
        </div>
      <div class="form-group d-flex align-items-center">
        <%= f.label :category, "Catégories:", class: 'col-form-label me-4' %>
        <%= f.select :category, Post.categories.keys, {}, class: 'form-control' %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>

      </div>
        <%= f.submit "Publier", class: "btn btn-flat my-3" %>
      <% end %>
    </div>
  </div>
</div>
