<h1>Éditer le commentaire</h1>

<%= simple_form_for [@post, @commentary] do |f| %>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <%= f.submit "Mettre à jour le commentaire", class: "btn btn-primary" %>
<% end %>

<%= link_to "Retour au post", post_path(@post) %>
